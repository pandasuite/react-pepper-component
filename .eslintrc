{
    "extends": "airbnb",
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "mocha": true
    },
    "plugins": [
      "react-hooks"
    ],
    "rules": {
      "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
      "react/prop-types": [0],
      "react/prefer-stateless-function": [0],
      "arrow-body-style": ["error", "as-needed"],
      "no-nested-ternary": [0],
      "max-len": [
        "error",
        {
          "code": 100,
          "ignoreComments": true,
          "ignoreStrings": true,
          "ignoreTemplateLiterals": true
        }
      ],
      "import/no-cycle": "off",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    },
    "settings": {
     "import/resolver": {
       "node": {
         "paths": ["src"]
       }
     }
   }
  }
  